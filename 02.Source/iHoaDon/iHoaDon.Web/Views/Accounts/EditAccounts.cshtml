@model iHoaDon.Web.EditAccountsModel
@{
    ViewBag.Title = "Register";
    ViewBag.PageTitle = "Cập nhật thông tin tài khoản";
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
}
<link href="/Content/Vendors/formvalidation/formValidation.css" rel="stylesheet" />
<link href="/Content/css/accounts.css" rel="stylesheet" />


@using (Html.BeginForm("EditAccounts", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data", @class = "issue-form form-horizontal form-label-left", @id = "edit-form" }))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Mã số thuế (mã ngân sách) <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.CompanyCode, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.CompanyCode)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Tên công ty <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Địa chỉ <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.Address)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Tỉnh thành <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(model => model.ProvinceId, Model.ListProvince, new { @onchange = "FillData()", @class = "form-control col-md-7 col-xs-12", @required = "required" })
            @Html.ValidationMessageFor(model => model.ProvinceId)
            @Html.TextBoxFor(model => model.Province, new { @style = "display: none" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Cơ quan thuế quản lý <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.DropDownListFor(model => model.TaxAgencyCode, Model.ListProvince, new { @onchange = "FillText()", @class = "form-control col-md-7 col-xs-12", @required = "required" })
            @Html.ValidationMessageFor(model => model.TaxAgencyCode)
            @Html.TextBoxFor(model => model.TaxAgencyName, new { @style = "display: none" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Số tài khoản ngân hàng <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.BankAccount, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.BankAccount)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Người đại diện trước pháp luật <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.Representative, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.Representative)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Số điện thoại <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.Phone)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
            Thư điện tử (email) <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control col-md-7 col-xs-12" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">

        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            <button type="submit" class="btn btn-success" id="edit-form-submit"><i class="fa fa-send"></i>&nbsp; Cập nhật thông tin</button>
        </div>
    </div>
}
<input id="ProvinceHideId" type="hidden" value="@ViewBag.Province" />
<input id="District" type="hidden" value="@ViewBag.District" />
@section ContentScript{
    <script src="/Content/Vendors/formvalidation/formValidation.js"></script>
    <script src="/Content/Vendors/formvalidation/framework/bootstrap4.js"></script>
    <script src="/Content/Vendors/formvalidation/language/vi_VN.js"></script>
    <script src="/Content/js/edit_accounts.js"></script>
}
