<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>IHoaDon | </title>
    <!-- Bootstrap -->
    <link href="/Content/Vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="/Content/css/bootstrap-extend.css" rel="stylesheet" />*@
    <!-- Font Awesome -->
    <link href="/Content/Vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!-- NProgress -->
    <link href="/Content/Vendors/nprogress/nprogress.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="/Content/css/custom.css" rel="stylesheet" />
    <style>
        .main_container .top_nav {
            margin-left: 0px;
        }

        .nav-md .container.body .right_col {
            margin-left: 0px;
        }

        footer {
            margin-left: 0px;
        }

        .modal-sidebar {
            margin-right: 125px;
            margin-left: 0px;
            width: 500px !important;
            padding: 0px 60px;
            padding-top: 60px;
            display: unset;
        }

            .modal-sidebar form {
                width: 350px;
                margin: 45px 0 20px;
            }
    </style>
</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="">
                                <a href="javascript::void(0)" class="user-profile" data-target="#examplePositionSidebar" data-toggle="modal">
                                    <i class="fa fa-sign-in"></i>&nbsp;&nbsp;ĐĂNG NHẬP
                                </a>
                            </li>
                            <li>
                                <a href="javascript::void(0)">
                                    LIÊN HỆ
                                </a>
                            </li>
                            <li class="">
                                <a href="javascript:;" class="user-profile dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                    TÀI LIỆU HƯỚNG DẪN
                                    <span class=" fa fa-angle-down"></span>
                                </a>
                                <ul class="dropdown-menu dropdown-usermenu pull-right">
                                    <li><a href="javascript:;"> Văn bản pháp luật</a></li>
                                    <li><a href="javascript:;"> Hướng dẫn sử dụng</a></li>
                                    <li><a href="javascript::void(0)">Mẫu hóa đơn</a></li>
                                </ul>
                            </li>
                            <li class="active">
                                <a href="javascript::void(0)">
                                    TRANG CHỦ
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="examplePositionSidebar" aria-hidden="true" aria-labelledby="examplePositionSidebar"
                 role="dialog" tabindex="-1">
                <div class="modal-dialog modal-simple modal-sidebar modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                            <h3 class="modal-title">Đăng nhập</h3>
                            <p>Sử dụng tài khoản hệ thống</p>
                        </div>
                        <div class="modal-body">
                            <form action="/Accounts/LogOnUser" method="post">
                                <input type="hidden" name="returnUrl" />
                                <div class="form-group">
                                    <label class="sr-only" for="CompanyCode">Tên đăng nhập</label>
                                    <input type="text" class="form-control" id="" name="CompanyCode" placeholder="Tên đăng nhập" value="">
                                </div>
                                <div class="form-group">
                                    <label class="sr-only" for="Password">Mật khẩu</label>
                                    <input type="password" class="form-control" id="Password" name="Password"
                                           placeholder="Mật khẩu">
                                </div>
                                <div class="form-group clearfix">
                                    <a class="float-right" href="#">Quên mật khẩu?</a>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block submit-btn" id="submit-login">Đăng nhập</button>
                                <p>Chưa có tài khoản? <a href="/Accounts/Register">Đăng ký ngay</a></p>
                                <br />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Modal -->
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">
                    <div class="clearfix"></div>
                    @RenderBody()
                </div>
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <!-- /footer content -->
        </div>
    </div>
    <!-- jQuery -->
    <script src="/Content/Vendors/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="/Content/Vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="/Content/Vendors/fastclick/lib/fastclick.js"></script>
    <!-- NProgress -->
    <script src="/Content/Vendors/nprogress/nprogress.js"></script>

    @RenderSection("ContentScript", required: false)
    <!-- Custom Theme Scripts -->
    <script src="/Content/js/custom.js"></script>
</body>
</html>
