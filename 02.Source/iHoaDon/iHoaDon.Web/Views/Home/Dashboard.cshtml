@{
    ViewBag.Title = "iHoaDon | Lập hóa đơn điện tử";
    Layout = "~/Views/Shared/_AuthenticatedLayout.cshtml";
}


<!-- top tiles -->
<div class="row tile_count">
    <div class="col-md-3 col-sm-3 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-files-o"></i> Hóa đơn phát hành</span>
        <div class="count">2500</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>4% </i> so với tháng trước</span>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-files-o"></i> Hóa đơn đã hủy</span>
        <div class="count">123</div>
        <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>3% </i> so với tháng trước</span>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-money"></i> Tổng tiền hóa đơn</span>
        <div class="count green">2,500,000,000</div>
        <span class="count_bottom"><i class="green"><i class="fa fa-sort-asc"></i>34% </i> so với tháng trước</span>
    </div>
    <div class="col-md-3 col-sm-3 col-xs-6 tile_stats_count">
        <span class="count_top"><i class="fa fa-user"></i> Total Females</span>
        <div class="count">4,567</div>
        <span class="count_bottom"><i class="red"><i class="fa fa-sort-desc"></i>12% </i> From last Week</span>
    </div>
</div>
<!-- /top tiles -->
<!-- Thống kê phát hành hóa đơn -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph x_panel">
            <div class="row x_title">
                <div class="col-md-6">
                    <h3>Thống kê phát hành <small></small></h3>
                </div>
                <div class="col-md-6">
                    <div id="reportrange" class="pull-right" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc">
                        <i class="glyphicon glyphicon-calendar fa fa-calendar"></i>
                        <span>December 30, 2014 - January 28, 2015</span> <b class="caret"></b>
                    </div>
                </div>
            </div>
            <div class="x_content">
                <div class="demo-container" style="height:250px">
                    <div id="chart_plot_03" class="demo-placeholder"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /Thống kê phát hành hóa đơn -->
@section ContentScript{
    <script src="/Content/Vendors/DateJS/build/date.js"></script>
    <script src="/Content/Vendors/Flot/jquery.flot.js"></script>
    <script src="/Content/Vendors/Flot/jquery.flot.time.js"></script>
    <script src="/Content/Vendors/flot.curvedlines/curvedLines.js"></script>


    <script src="/Content/js/dashboard.js"></script>
}
