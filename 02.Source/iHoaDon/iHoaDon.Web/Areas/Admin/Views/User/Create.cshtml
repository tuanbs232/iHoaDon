@model iHoaDon.Web.Areas.Admin.Models.AccountModel
@{
    ViewBag.Title = "iHoaDon - Cập nhật tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
<div class="adminheading">
    <div class="fl">
        Thêm mới tài khoản quản trị
    </div>
</div>
<div class="clr">
</div>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
<div class="">
    @using (Ajax.BeginForm("Create", "User", FormMethod.Post, new AjaxOptions { UpdateTargetId = "mydiv" }, new { area = "Admin", id = "myform", @enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(false)
        <table border="0px" class="adminlist" cellpadding="5px" cellspacing="1px">
            <tr>
                <th colspan="2" align="left">Thông tin tài khoản quản trị
                </th>
            </tr>
            <tr>
                <td width="20%" align="right">
                    <strong>@Html.LabelFor(model => model.CompanyName)</strong>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.CompanyName)
                    @Html.ValidationMessageFor(model => model.CompanyName)
                </td>
            </tr>
            <tr>
                <td width="20%" align="right">
                    <strong>@Html.LabelFor(model => model.CompanyCode)</strong>
                </td>
                <td>
                    @Html.TextBoxFor(u => u.CompanyCode, new { style = "width:250px !important;" })<span style="color: red; padding-left: 7px;">@Html.ValidationMessageFor(model => model.CompanyCode)</span>
                </td>
            </tr>
            <tr>
                <td width="20%" align="right">
                    <strong>@Html.LabelFor(model => model.Password)</strong>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Password, new { type = "password" })
                    @Html.ValidationMessageFor(model => model.Password)
                </td>
            </tr>
            <tr>
                <td width="20%" align="right">
                    <strong>@Html.LabelFor(model => model.Phone)</strong>
                </td>
                <td>
                    @Html.TextBoxFor(model => model.Phone)
                    @Html.ValidationMessageFor(model => model.Phone)
                </td>
            </tr>
            <tr>
                <td width="20%" align="right">
                    <strong>@Html.LabelFor(model => model.Role)</strong>
                </td>
                <td>
                    <select name="Role">
                        @foreach (var role in iHoaDon.Entities.Roles.AllRoleNames.Where(role => role.Key == iHoaDon.Entities.Roles.AdminCode || role.Key == iHoaDon.Entities.Roles.AdminAccountManagerCode || role.Key == iHoaDon.Entities.Roles.AdminTechSupportCode || role.Key == iHoaDon.Entities.Roles.ServiceCheckUserCode))
                        {
                            <option value="@role.Key">@role.Value</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(model => model.Role)
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="fr ToolBarBtn">
                        <a href="javascript: submitform()" id="clickSubmit"><span class="icon ico3"></span>Lưu
                                lại</a> <a href="@Url.Action("Me", "User", new { area = "Admin" })"><span class="icon ico5"></span>Hủy bỏ</a>
                    </div>
                    <div class="clr">
                    </div>
                </td>
            </tr>
        </table>
        
    }
</div>
@Html.Partial("_ToolBar")